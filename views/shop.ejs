<%- include("partials/header.ejs") %>

<div class="heading">
    <h1>our shop</h1>
    <p> <a href="/">home >></a> shop </p>
</div>

<section class="category">

    <h1 class="title"> our <span>category</span> <a href="#">view all >></a> </h1>

    <div class="box-container">

        <a href="#" class="box">
            <img src="image/cat-1.png" alt="">
            <h3>fresh fruits</h3>
        </a>

        <a href="#" class="box">
            <img src="image/cat-2.png" alt="">
            <h3>vegetables</h3>
        </a>

        <a href="#" class="box">
            <img src="image/cat-3.png" alt="">
            <h3>organic spices</h3>
        </a>

        <a href="#" class="box">
            <img src="image/cat-4.png" alt="">
            <h3>fresh meat</h3>
        </a>

        <a href="#" class="box">
            <img src="image/cat-5.png" alt="">
            <h3>organic wheat</h3>
        </a>

    </div>

</section>
<section class="contact">
<div class="row">

    <form  action="/shop-product" method="POST" >
        <h3>Add a product</h3>
        <div class="inputBox">
            <input type="text" for="productName" id="productName" name="productName" placeholder="enter your product name" class="box">
            <input type="text" for="price" id="price" name="price"placeholder="enter product price" class="box" >
        </div>
        <div class="inputBox">
            <input type="text" for="imageSource" id="imageSource" name="imageSource" placeholder="enter image source" class="box">
            <input type="text" for="category" id="category" name="category" placeholder="enter product category" class="box">
            
        </div>
       
        <input type="submit" value="add product" class="btn">
    </form>

   
</div>
</section>
<section class="products">

    <h1 class="title"> our <span>products</span> <a href="#">view all >></a> </h1>

    <div class="box-container">
        <% products.forEach(function(i){%> 
        <div class="box">
            <div class="icons">
                <a href="#" class="fas fa-shopping-cart"></a>
                <a href="#" class="fas fa-heart"></a>
                <a href="#" class="fas fa-eye"></a>
            </div>
            <div class="image">
                <img src="<%= i.imageSource %>" alt="">
            </div>
            <div class="content">
                <h3><%= i.productName %></h3>
                <div class="price"><%= i.price %></div>
                <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
            </div>
        </div>
<% }) %>

    </div>

</section>






















